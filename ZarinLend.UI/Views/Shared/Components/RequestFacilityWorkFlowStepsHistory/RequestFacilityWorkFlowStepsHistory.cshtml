@model List<RequestFacilityWorkFlowStepHistoryModel>

@if (Model != null)
{
    <style type="text/css">
    </style>
    <div class="mb-1 py-2 px-1 rounded-lg bg-white">
        <div class="table-responsive table-sm">
            <table class="table requestFacilityStepsHistory">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col" data-sortorder="date" >عنوان مرحله</th>
                        <th scope="col" data-sortorder="Tedad" >وضعیت</th>
                        <th scope="col" data-sortorder="Tedad" >اقدام کننده</th>
                        <th scope="col" data-sortorder="Tedad" >تاریخ اقدام</th>
                        <th scope="col" data-sortorder="Tedad" >توضیحات</th>
                    </tr>
                </thead>
                <tbody id="requestGridRows">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i+1)</td>
                            <td>@Model[i].WorkFlowStepName</td>
                            <td>@Model[i].StatusName</td>
                            <td>@Model[i].Operator</td>
                            <td>@Model[i].ShamsiUpdateDate</td>
                            <td>@Model[i].StatusDescription</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
