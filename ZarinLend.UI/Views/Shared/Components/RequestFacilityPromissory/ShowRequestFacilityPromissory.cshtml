@using static Common.Enums;
@model RequestFacilityPromissoryModel

<style type="text/css">
    #promissoryCanvas {
        width: 100%;
        height: auto;
    }
</style>
<div class="bg-white border rounded p-75">
    @if (Model != null)
    {
        <div class="text-bold-900 secondary darken-4 font-medium-3">
            اطلاعات سفته
        </div>
        <div class="border rounded mt-1">
            <div class="d-flex align-items-center p-1">
                <span class="w-50 text-bold-500 font-small-2">مبلغ سفته</span><span class="w-50 text-bold-700 secondary darken-4 font-medium-1">@Model.Amount.ToString("N0") ريال</span>
            </div>
            <hr class="my-0" />
            <div class="d-flex align-items-center p-1">
                <span class="w-50 text-bold-500 font-small-2">شماره خزانه داری</span><span class="w-50 text-bold-400 secondary darken-4 font-medium-1">@Model.PromissoryId</span>
            </div>
            <hr class="my-0" />
            <div class="d-flex align-items-center p-1">
                <span class="w-50 text-bold-500 font-small-2">در وجه</span><span class="w-50 text-bold-400 secondary darken-4 font-medium-1">@Model.ReceiverName با شناسه ملی @Model.ReceiverIdCode</span>
            </div>
            <hr class="my-0" />
